<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailActivity">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.7"
        tools:src="@drawable/img" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/banner2"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:scaleType="centerCrop"
                android:alpha="0"
                android:visibility="invisible"
                tools:src="@drawable/img" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/black_bg_trans"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/round_arrow_back_ios_24" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/banner2"
                android:layout_above="@id/linearLayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/synopsis"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/black_bg_trans"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/grey2"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Synopsis"
                            android:textColor="@color/white"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="@string/lorem50"
                            android:textColor="@color/white2"
                            android:ellipsize="end"
                            android:maxLines="5"
                            android:textSize="18sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/others"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="January 16"
                        android:background="@drawable/text_bg"
                        android:padding="12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tmdb_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_bg_trans"
                        android:gravity="center"
                        android:padding="12dp"
                        android:focusable="false"
                        android:enabled="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/tmdb_logo"
                        app:iconSize="20dp"
                        app:iconTint="@null"
                        app:strokeColor="@color/grey2"
                        app:strokeWidth="1dp"
                        tools:text="8.1" />
                    <TextView
                        android:id="@+id/filmType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Duree Film"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/text_bg"
                        android:padding="12dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/banner2"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/resume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black_bg_trans"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:text="Reprendre la lecture"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/round_play_arrow_24"
                    app:iconSize="26dp"
                    app:strokeColor="@color/grey2"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/trailer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black_bg_trans"
                    android:padding="12dp"
                    android:text="Bande Annonce"
                    android:layout_weight="1"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/youtube_focus"
                    app:iconTint="@null"
                    android:layout_marginStart="10dp"
                    app:iconSize="26dp"
                    app:strokeColor="@color/grey2"
                    app:strokeWidth="1dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:cardBackgroundColor="@color/focus"
                    app:cardCornerRadius="100dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/round_play_arrow_24" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black_bg_trans"
                    android:padding="12dp"
                    app:icon="@drawable/heart_focus"
                    android:layout_weight="1"
                    android:text="Ajouter aux Favoris"
                    app:cornerRadius="12dp"
                    app:iconSize="26dp"
                    app:strokeColor="@color/grey2"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/reader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black_bg_trans"
                    android:padding="12dp"
                    android:layout_marginStart="8dp"
                    app:icon="@drawable/video_focus"
                    android:layout_weight="1"
                    app:iconPadding="12dp"
                    android:text="LECTEUR EXTERNE"
                    app:iconSize="26dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/grey2"
                    app:strokeWidth="1dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/banner2"
                android:padding="15dp"
                android:text="Acteurs"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/castRC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/cast_card"
                android:layout_below="@id/cast" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>