<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="My Name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/childRC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/child_item" />

    <LinearLayout
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/childRC"
        android:layout_marginTop="8dp"
        android:layout_alignBottom="@id/childRC"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="@drawable/button_left">

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:src="@drawable/round_keyboard_arrow_left_24"
            android:layout_margin="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/name"
        android:layout_alignTop="@id/childRC"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_alignBottom="@id/childRC"
        android:gravity="center"
        android:background="@drawable/button_right">

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:src="@drawable/round_keyboard_arrow_right_24"
            android:layout_margin="15dp" />

    </LinearLayout>

</RelativeLayout>